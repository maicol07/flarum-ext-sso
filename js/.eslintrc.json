{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "plugins": [
        "@babel"
    ],
    "extends": [
        "airbnb-base",
        "plugin:mithril/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "@babel/new-cap": "error",
        "@babel/no-invalid-this": "off",
        "@babel/no-unused-expressions": "error",
        "@babel/semi": "error",
        "object-curly-spacing": "off",
        "eol-last": "off",
        "func-names": "off",
        "comma-dangle": [
            "error",
            "only-multiline"
        ]
    }
}
